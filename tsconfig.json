{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"lib": [
			"ESNext"
		],
		"types": [
			"vite/client",
			"vitest/globals",
			"@cloudflare/workers-types/experimental",
			"@cloudflare/vitest-pool-workers",
			"./worker-configuration.d.ts"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"exclude": [
		"test"
	],
	"include": [
		"worker-configuration.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
	]
}
